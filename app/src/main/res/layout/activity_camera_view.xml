<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <SurfaceView
        android:id="@+id/cameraview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_android_icon"
        android:onClick="onClick"
        android:visibility="invisible" />



    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_left_arrow_2"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/left_arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/left_arrow_text"
        android:src="@drawable/ic_left_arrow_2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/left_arrow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/left_arrow"
        android:text="BERK3333"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/left_arrow_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/left_arrow2"
        android:text="BERK4444"
        android:visibility="invisible"
        />










    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_right_arrow_2"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/right_arrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/right_arrow_text"
        android:src="@drawable/ic_right_arrow_2"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/right_arrow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/right_arrow"
        android:text="BERK111"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/right_arrow_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/right_arrow2"
        android:text="BERK222"
        android:visibility="invisible"
        />









    <TextView
        android:id="@+id/cameraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:text="Large Text" />




    <TextView
        android:id="@+id/teamMemberInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:visibility="invisible" />

</RelativeLayout>